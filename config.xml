<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android" 
        id          = "ru.yonzo-cosm.app"
        versionCode = "10"
        version     = "1.0.0">

    <name>Yonzo-Cosmetic</name>

    <description>
        Корейская косметика
    </description>

    <author>Yonzo Cosmetic</author>

    <plugin name='cordova-plugin-splashscreen' />
    <plugin name='cordova-plugin-inappbrowser' />
    <plugin name='cordova-plugin-network-information' />

    <preference name='phonegap-version' value='cli-9.0.0' />

    <gap:plugin name='onesignal-cordova-plugin' spec='2.4.5' source='npm' />

    <preference name='android-build-tool' value='gradle' />
    <preference name="android-targetSdkVersion" value="28" />
    <preference name='orientation' value='default' />

    <preference name="SplashMaintainAspectRatio" value="false" />
    <preference name="SplashScreenSpinnerColor" value="#ffffff" />

    <preference name="Fullscreen" value="false" />


    <platform name="android">
        <icon src="res/android/icon/ldpi_2021-03-01_22-56-37.png" density="ldpi" />
        <icon src="res/android/icon/mdpi_2021-03-01_22-56-37.png" density="mdpi" />
        <icon src="res/android/icon/hdpi_2021-03-01_22-56-37.png" density="hdpi" />
        <icon src="res/android/icon/xhdpi_2021-03-01_22-56-37.png" density="xhdpi" />
        <icon src="res/android/icon/xxhdpi_2021-03-01_22-56-37.png" density="xxhdpi" />
        <icon src="res/android/icon/xxxhdpi_2021-03-01_22-56-37.png" density="xxxhdpi" />

        <splash src="res/android/screen/hdpi_port_2021-03-01_22-29-58.png" density="port-hdpi"/>
        <splash src="res/android/screen/ldpi_port_2021-03-01_22-29-58.png" density="port-ldpi"/>
        <splash src="res/android/screen/mdpi_port_2021-03-01_22-29-58.png" density="port-mdpi"/>
        <splash src="res/android/screen/xhdpi_port_2021-03-01_22-29-58.png" density="port-xhdpi"/>
        <splash src="res/android/screen/hdpi_land_2021-03-01_22-29-58.png" density="land-hdpi"/>
        <splash src="res/android/screen/ldpi_land_2021-03-01_22-29-58.png" density="land-ldpi"/>
        <splash src="res/android/screen/mdpi_land_2021-03-01_22-29-58.png" density="land-mdpi"/>
        <splash src="res/android/screen/xhdpi_land_2021-03-01_22-29-58.png" density="land-xhdpi"/>
        <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application">
        <application android:usesCleartextTraffic="true" />
       </edit-config>
    </platform>

    <access origin='*'/>
    <plugin name='cordova-plugin-whitelist' />
    <allow-intent href='http://*/*'/>
    <allow-intent href='https://*/*'/>
    <allow-intent href='tel:*'/>
    <allow-intent href='sms:*'/>
    <allow-intent href='mailto:*'/>
    <allow-intent href='geo:*'/>

</widget>